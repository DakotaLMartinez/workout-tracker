<!DOCTYPE html>
<html>
  <head>
    <title>WorkoutTracker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/navbar' %>
    <% if current_user %>
      <div class="ph4-ns ph3">
        Admin: <strong><%= current_user.admin? %></strong><br/>
        current_user: <%= current_user.email %><br/>
        <%= link_to 'Toggle admin rights', toggle_admin_path(current_user), method: :patch %>
      </div>
    <% end %>
    <% if flash[:notice] %>
      <p class="notice bg-lightblue pa3 ph4-ns"><%= flash[:notice] %></p>  
    <% end %>
    <% if flash[:alert] || flash[:error] %>
      <p class="alert bg-red pa3 ph4-ns"><%= flash[:alert] || flash[:error] %></p>
    <% end %>
    <div class="ph4-ns ph3">
      <%= yield %>    
    </div>
    
  </body>
</html>
