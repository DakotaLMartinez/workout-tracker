<section class="sets f5">
  <% if current_page?(exercise_sets_path(exercise)) %>
    <h1><%= link_to exercise.name, exercise_path(exercise), class: 'no-underline' %></h1>
  <% end %>
  <h2>Sets</h2>
  <ul class="list pl0">
    <li class="pb1">
      <div class="w-20 b dib">Reps</div>
      <div class="w-20 b dib">Weight</div>
      <div class="w-25 b dib">Date</div>
    </li>
    <% sets.each do |set| %>
      <%= render partial: 'exercise_sets/set_row', locals: {set: set, exercise: exercise} %>
    <% end %>
    <li id="add-set" class="mt3 cf">
      <div class="fl">
        <%= link_to 'Add Set', new_exercise_set_path(exercise), remote:true, class: 'no-underline bg-blue pa3 white' %>
      </div>
      <div class="fr">
        <%= link_to 'Show All Sets', exercise_sets_path(exercise), class: 'no-underline bg-green pa3 white' if !current_page?(exercise_sets_path(exercise)) %>
      </div>
    </li>
  </ul>
</section>