<h1><%= @workout.name %></h1>
<h4>Exercises:</h4>
<ul class="list pl3">
  <% @workout.exercises.each do |exercise| %> 
    <li class="mv3"><%= link_to exercise.name, exercise_path(exercise), class: 'no-underline' %></li>
  <% end %>
</ul>
<div class="buttons cf mt5">
  <%= link_to 'Edit', edit_workout_path(@workout), class: 'link bg-blue white pa3 db fl mr1' %>
  <%= button_to 'Delete', @workout, method: :delete, class: 'bg-red white pa3 db fl pointer bn' %>
</div>
<p class="author">by: <%= @workout.user.email  if @workout.user %></p>
