<h1>Exercises <%= link_to '+New', new_exercise_path, class: 'bg-blue white no-underline br4 pa2 f5 relative', style: 'top: -8px' %></h1>
<ul class="list pl1">
  <% exercises.each do |exercise| %>
    <li class="mv3">
      <div class="w-60 dib"><%= link_to exercise.name, exercise_path(exercise), class: 'no-underline' %></div>
      <div class="w-30 dib">
      <% if current_user %>
        <%= pluralize(current_user.recent_sets_count(exercise), 'set') %> today
      <% end%>
      </div>
    </li>
  <% end %>
</ul>
